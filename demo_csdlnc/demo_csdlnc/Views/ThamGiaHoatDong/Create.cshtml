@model demo_csdlnc.Models.ThamGiaHoatDong

@{
    ViewData["Title"] = "Thêm hoạt động mới";
}

<h2>Thêm hoạt động mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MaSV" class="control-label">Sinh viên</label>
        <select asp-for="MaSV" class="form-control" asp-items="ViewBag.MaSV"></select>
        <span asp-validation-for="MaSV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenHoatDong" class="control-label"> Tên hoạt động </label>
        <input asp-for="TenHoatDong" class="form-control" />
        <span asp-validation-for="TenHoatDong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgayThamGia" class="control-label">Ngày tham gia</label>
        <input asp-for="NgayThamGia" class="form-control" type="date" />
        <span asp-validation-for="NgayThamGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiemSo" class="control-label">Điểm số</label>
        <input asp-for="DiemSo" class="form-control" />
        <span asp-validation-for="DiemSo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}