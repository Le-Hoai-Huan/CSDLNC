@model demo_csdlnc.Models.ThamGiaHoatDong

@{
    ViewData["Title"] = "Chi tiết tham gia hoạt động";
}

<h2>Chi tiết tham gia hoạt động</h2>

<div>
    <h4>@Model.TenHoatDong</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên sinh viên</dt>
        <dd class="col-sm-10">@Model.SinhVien.HoTen</dd>
        <dt class="col-sm-2">Tên hoạt động</dt>
        <dd class="col-sm-10">@Model.TenHoatDong</dd>
        <dt class="col-sm-2">Ngày tham gia</dt>
        <dd class="col-sm-10">@Model.NgayThamGia.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Điểm số</dt>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaThamGia" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>