@model demo_csdlnc.Models.TieuChi

@{
    ViewData["Title"] = "Thêm mới Tiêu chí";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Thêm mới Tiêu chí</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="TenTieuChi" class="form-label fw-bold"></label>
                <input asp-for="TenTieuChi" class="form-control" placeholder="Nhập tên tiêu chí" />
                <span asp-validation-for="TenTieuChi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label fw-bold"></label>
                <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
