@model IEnumerable<demo_csdlnc.Models.TieuChi>

@{
    ViewData["Title"] = "Danh sách Tiêu chí";
    var userRole = Context.Session.GetString("Role");
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách Tiêu chí</h2>
    @if (userRole == "Admin" || userRole =="NguoiXetDuyet")
    {
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
        </div>
    }
    

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenTieuChi)</th>
                <th style="width: 40%;">@Html.DisplayNameFor(model => model.MoTa)</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenTieuChi)</td>
                    <td>
                        @(item.MoTa?.Length > 50 ? item.MoTa.Substring(0, 100) + "..." : item.MoTa)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.MaTieuChi" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.MaTieuChi" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.MaTieuChi" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
