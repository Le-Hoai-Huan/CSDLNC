@model demo_csdlnc.Models.RegisterViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Đăng ký</h2>
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Username:</label>
                        <input asp-for="Username" class="form-control" placeholder="Nhập tên tài khoản" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password:</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vai trò:</label>
                        <select asp-for="Role" class="form-select">
                            <option value="SinhVien">Sinh Viên</option>
                            <option value="NguoiXetDuyet">Người Xét Duyệt</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p>Đã có tài khoản? <a asp-controller="Auth" asp-action="Login" class="text-primary">Đăng nhập ngay</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
