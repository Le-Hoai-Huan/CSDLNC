@model demo_csdlnc.Models.TieuChiSinhVien

@{
    ViewData["Title"] = "Xóa đánh giá tiêu chí";
}

<h2>Xóa đánh giá tiêu chí</h2>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <h4>@Model.TieuChi.TenTieuChi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên sinh viên</dt>
        <dd class="col-sm-10">@Model.SinhVien.HoTen</dd>
        <dt class="col-sm-2">Tiêu chí</dt>
        <dd class="col-sm-10">@Model.TieuChi.TenTieuChi</dd>
        <dt class="col-sm-2">Nhận xét</dt>
        <dd class="col-sm-10">@Model.NhanXet</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaDanhGia" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>