@model IEnumerable<demo_csdlnc.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách Sinh Viên";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách Sinh Viên</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-lg p-3">
        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Họ Tên</th>
                        <th>Ngày Sinh</th>
                        <th>Giới Tính</th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Mã Lớp</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                            <td>
                                @(item.GioiTinh ? "Nam" : "Nữ")
                            </td>
                            <td>@item.Email</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Lop?.TenLop</td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable(); // Nếu dùng DataTables.js
        });
    </script>
}
